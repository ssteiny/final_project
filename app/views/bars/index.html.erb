<div class="page-header">
  <br>
  <h1>
    Happy Hour Bars</h1>
    
    <a href="/bars/new" class="btn btn-lg btn-success">New Bar</a> <br>
  
  <div class="row">
  <div class="col-md-12">
    <br>
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Style</th>
        <th>Cuisine</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Actions</th>
      </tr>

      <% @bars.each do |bar| %>
      <tr>
        <td><%= bar.name %></td>
        <td><%= bar.address %></td>
        <td><%= bar.style %></td>
        <td><%= bar.cuisine %></td>
        <td><%= bar.happy_hour_start_time %></td>
        <td><%= bar.happy_hour_end_time %></td>
        <td>
          <a href="/bars/<%= bar.id %>" class="btn btn-primary">Show</a>
          <a href="/bars/<%= bar.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bar/<%= bar.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bars, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "bars_filters" do |f| %>
      <p class="lead">Narrow results:</p>

