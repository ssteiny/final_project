<!-- Validation failure messages -->
<% if @food_item.errors.any? %>
  <% @food_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Food Item</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_food_item" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @food_item.name %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="url" id="image" name="image" class="form-control">
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @food_item.price %>">
      </div>
      
       <!-- Label and input for bar_id -->
  <div class="form-group">
    <label for="bar_id">
      Bar
    </label>
    
      <%= select_tag("bar_id", options_from_collection_for_select(Bar.all, :id, :name, @food_order.try(:bar_id)), :class => "form-control") %>
      or <a href="/bars/new">Add a new bar.</a>  
  </div>


      <button class="btn btn-success">
        Create Food Item
      </button>
      or
      <a href="/food_items">Cancel</a>
    </form>
  </div>
</div>
